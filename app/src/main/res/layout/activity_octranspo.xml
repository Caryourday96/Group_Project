<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OCTranspo" >


    <fragment
        android:name="alonquin.cst2335.group_project.OCStationsFragment"
        android:id="@+id/fragmentSpace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/addStationNoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/oc_addstationbutton" />

    <EditText
        android:id="@+id/stationNoInput"
        android:layout_toLeftOf="@+id/addStationNoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:inputType="text" />

    <Button
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addStationNoButton"
        android:onClick="ChangeFragment"
        android:text="Toggle Help Menu" />

</RelativeLayout>